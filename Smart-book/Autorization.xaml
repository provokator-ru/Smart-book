<Page x:Class="Smart_book.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Smart_book"
      mc:Ignorable="d" 
      Height="650" Width="900"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Autorization">

    <Grid Background="Gray">
        <Border Background="White" MinWidth="400" VerticalAlignment="Center" Margin="15" Padding="40" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="30" FontWeight="Bold" Margin="150 0 0 20"/>
                <TextBox materialDesign:HintAssist.Hint="Введите почту" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <Button x:Name="Voiti" HorizontalAlignment="Center" Content="Войти" Margin="0 20" Click="Voiti_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
